<form
  class="w-11/12 mx-auto my-4 bg-gray-100 shadow-lg rounded overflow-hidden border-gray-800 border"
>
  <div
    class="flex items-center justify-between px-4 py-2 bg-gray-800 text-white"
  >
    <h2><input
        class="bg-gray-800"
        id="editPostTitleArea"
        type="text"
        value="{{{chosenPost.title}}}"
      /></h2>
  </div>
  <div class="p4 bg-white">
    <p><input
        id="editPostContentArea"
        type="text"
        value="{{{chosenPost.content}}}"
      /></p>
    <div class="flex justify-end h-7">
      <button
        class="text-blue-500 hover:underline mr-2"
        id="editPostSubmitBtn"
      >Submit</button>
      <a
        href="/{{{chosenPost.id}}}"
        class="text-red-500 hover:underline mr-2"
      >Cancel</a>
    </div>
  </div>

</form>

<script src="/js/editPost.js"></script>